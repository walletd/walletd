[package]
name = "walletd_icp"
version = "0.1.0"
edition = "2021"

[dependencies]
ic-agent = "0.34"
ic-utils = "0.34"
candid = "1.0"
ic-cdk = "0.13.6"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
thiserror = "1.0"
sha2 = "0.10"
hex = "0.4"

# Temporarily remove workspace dependencies for testing
walletd_hd_key = { path = "../../key_manager/hd_key" }

[dev-dependencies]
tokio = { version = "1.0", features = ["full", "rt", "macros"] }
ed25519-dalek = "2.0"
uuid = { version = "1.4", features = ["v4"] }
async-trait = "0.1"
futures = "0.3"
